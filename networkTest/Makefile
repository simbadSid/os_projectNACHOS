CC     	= g++
EXEC   	= ringTopologyTest
CFLAGS 	= -Wall -Werror -g -pthread
all   	: $(EXEC)










#-----------------------------------------------------------------------------------------------------------
# --------------------------------------- Executables a creer -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
ringTopologyTest	: ringTopologyTest.o
					$(CC) $(CFLAGS) -o $@ $^

ringTopologyTest.o	: ringTopologyTest.cc
					$(CC) $(CFLAGS) -c -o $@ $^

#-----------------------------------------------------------------------------------------------------------
#---------------------------------------- Methodes generales -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
.PHONY	: clean mrproper
clean:
	rm -f *.o
	rm -f ../sharedFile/*.o
mrproper: clean
	rm -rf $(EXEC)
